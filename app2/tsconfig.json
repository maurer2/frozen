{
  "extends": "@sindresorhus/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "resolveJsonModule": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "noPropertyAccessFromIndexSignature": false,
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
