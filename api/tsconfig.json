    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["./types.d.ts", "./**/*.ts"],
  "exclude": ["node_modules"],
}
