{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es2015",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
  },
  "include": [
    "./types.d.ts",
    "./**.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "*": [
      "./types.d.ts",
    ]
  }
}
